<h1> Portfolio Items </h1>

<%= link_to "Create New Item", new_portfolio_path %>

<% @portfolio_item.each do |x| %>
  <p> <%= link_to x.title, portfolio_path(x) %></p>
  <p> <%= x.subtitle %></p>
  <p> <%= x.body %></p>
  <%= image_tag x.thumb_image unless x.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(x) %>
<% end %>
